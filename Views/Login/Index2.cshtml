<section class="section-books" id="books">
    <div class="container">
        <span class="subheading">Home</span>
    </div>
    <section class="section-hero">

        <div class="hero">
            <div class="hero-text-box">
                <h1 class="heading-primary">
                    AA new book delivered to your phone, when ever required
                </h1>
                <p class="hero-description">
                    The smart 365-days-per-year books purchase that will make you read more and broaden your horizons. Tailored to your personal tastes and reading habits.
                </p>
                <a asp-controller="Buying" asp-action="Index" class="btn btn--full margin-right-sm">Start reading well</a>

                <a asp-controller="HowItWorks" asp-action="Index" class="btn btn--outline">Learn more &darr;</a>

                <div class="delivered-books">
                    <div class="delivered-imgs">
                        <img src="~/img/Updated Logo/Customer1.png" alt="Customer photo" />
                        <img src="~/img/Updated Logo/Customer2.png" alt="Customer photo" />
                        <img src="~/img/Updated Logo/Customer3.png" alt="Customer photo" />
                        <img src="~/img/Updated Logo/Customer4.png" alt="Customer photo" />
                        <img src="~/img/Updated Logo/Customer5.png" alt="Customer photo" />
                        <img src="~/img/Updated Logo/Customer6.png" alt="Customer photo" />
                    </div>
                    <p class="delivered-text">
                        <span>100,000+</span> books delivered last year!
                    </p>
                </div>
            </div>

            <div class="hero-img-box">
                <picture>
                    <source srcset="~/img/Updated Logo/collage.png" type="image/png" />
                    <source srcset="~/img/Updated Logo/collage.png" type="image/png" />

                    <img src="~/img/Updated Logo/collage.png"
                         class="hero-img"
                         alt="Collage" />
                </picture>
            </div>
        </div>
    </section>

    <section class="section-featured">
        <div class="container">
            <h2 class="heading-featured-in">As featured in</h2>
            <div class="logos">
                <img src="~/img/Updated Logo/ht.png" alt="Hindu" />
                <img src="~/img/Updated Logo/hindu.png"
                     alt="Hindu logo" />
                <img src="~/img/Updated Logo/tnie.png"
                     alt="Times New India Logo" />
                <img src="~/img/Updated Logo/toi.png" alt="Times of India" />
            </div>
        </div>
    </section>
</section>


<section class="section-testimonials" id="testimonials">
    <div class="testimonials-container">
