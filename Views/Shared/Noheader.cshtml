<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description"
          content="Book Dash" />

    <!-- Always include this line of code!!! -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" href="~/img/Updated Logo/logo.png" />
    <link rel="apple-touch-icon" href="~/img/apple-touch-icon.png" />
    <link rel="manifest" href="manifest.webmanifest" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/css/general.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/queries.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="~/css/Singup.css" />

    <script type="module"
            src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule=""
            src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.js"></script>

    <script defer
            src="https://unpkg.com/smoothscroll-polyfill@0.4.4/dist/smoothscroll.min.js"></script>
    <script defer src="~/js/script.js"></script>

</head>
<body>
    <header class="header">
        <a asp-controller="Login" asp-action="Index">
            <img class="logo" alt="Book Bounty" src="~/img/Updated Logo/logo.png" />
        </a>

        <nav class="main-nav">
            <ul class="main-nav-list">
                <li class="nav-item">
                    <a class="main-nav-link" asp-controller="Login" asp-action="Index2">Home</a>
                </li>
                <li class="nav-item">
                    <a class="main-nav-link" asp-controller="Login" asp-action="Index">Login</a>
                </li>
                <li class="nav-item">
                    <a class="main-nav-link" asp-controller="SignUp" asp-action="SignUp">Sign Up</a>
                </li>
            </ul>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="footer">
            <div class="container grid grid--footer">
                <div class="logo-col">
                    <a href="#" class="footer-logo">
                        <img class="logo" alt="logo" src="~/img/Updated Logo/logo.png" />
                    </a>

                    <ul class="social-links">
                        <li>
                            <a class="footer-link" href="#">
                                <ion-icon class="social-icon" name="logo-instagram"></ion-icon>
                            </a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">
                                <ion-icon class="social-icon" name="logo-facebook"></ion-icon>
                            </a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">
                                <ion-icon class="social-icon" name="logo-twitter"></ion-icon>
                            </a>
                        </li>
                    </ul>

                    <p class="copyright">
                        Copyright &copy; <span class="year">2027</span> by InfiniteInk, Inc.
                        All rights reserved.
                    </p>
                </div>

                <div class="address-col">
                    <p class="footer-heading">Contact us</p>
                    <address class="contacts">
                        <p class="address">
                            96 Infinite Ink IT ST, Siruseri Chennai, India
                        </p>
                        <p>
                            <a class="footer-link" href="tel:415-201-6370">415-201-6370</a><br />
                            <a class="footer-link" href="mailto:query@infiniteink.in">query@infiniteink.in</a>
                        </p>
                    </address>
                </div>

                <nav class="nav-col">
                    <p class="footer-heading">Account</p>
                    <ul class="footer-nav">
                        <li><a class="footer-link" href="#">Create account</a></li>
                        <li><a class="footer-link" href="#">Sign in</a></li>
                        <li><a class="footer-link" href="#">iOS app</a></li>
                        <li><a class="footer-link" href="#">Android app</a></li>
                    </ul>
                </nav>

                <nav class="nav-col">
                    <p class="footer-heading">Company</p>
                    <ul class="footer-nav">
                        <li><a class="footer-link" href="#">About Infinite Ink</a></li>
                        <li><a class="footer-link" href="#">For Business</a></li>
                        <li><a class="main-nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a></li>
                        <li><a class="footer-link" href="#">Careers</a></li>
                    </ul>
                </nav>

                <nav class="nav-col">
                    <p class="footer-heading">Resources</p>
                    <ul class="footer-nav">
                        <li><a class="footer-link" href="#">Offline Stores </a></li>
                        <li><a class="footer-link" href="#">Help center</a></li>
                        <li><a class="footer-link" href="#">Privacy & terms</a></li>
                    </ul>
                </nav>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
